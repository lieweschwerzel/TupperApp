<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageView_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text_view_status"
            android:layout_width="72dp"
            android:layout_height="27dp"
            android:layout_below="@id/text_view_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="120dp"
            android:layout_toStartOf="@+id/imageView_image3"
            android:layout_toEndOf="@+id/imageView_image"
            android:text="Status"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/text_view_datum"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_image3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="-32dp"
            android:layout_marginEnd="130dp"
            android:text="Datum"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView_image"
            android:layout_width="53dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            tools:srcCompat="@drawable/image" />

        <ImageView
            android:id="@+id/imageView_image3"
            android:layout_width="113dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="13dp"
            android:layout_toEndOf="@+id/text_view_title"
            tools:srcCompat="@drawable/image" />

    </RelativeLayout>

</android.support.v7.widget.CardView>